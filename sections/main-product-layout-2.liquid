{%- assign pageUrl = contentForQuerystring
  | split: '"pageurl":"'
  | last
  | split: '"'
  | first
  | split: request.host
  | last
  | replace: '\/', '/'
  | replace: '%20', ' '
  | replace: '\u0026', '&'
-%}
{%- assign pageQuerystring = pageUrl | split: '?' | last -%}
{%- liquid
  assign st = section.settings
  assign th_st = settings
  assign container = th_st.general_layout
  assign custom_container = th_st.custom_width_bd
  assign container_width = ''
  if container == 'default'
    assign container_width = '1260'
  else
    assign container_width = custom_container
  endif
  assign option_name = 'Color'
  if th_st.option_name_color != blank
    assign option_name = th_st.option_name_color | split: ','
  endif
  if th_st.option_name_size != blank
    assign option_name_size = th_st.option_name_size | split: ','
  endif
  assign color_type = th_st.swatch_type
  assign selector_type = th_st.swatch_selector_type
  assign show_wishlist = th_st.show_wishlist
  assign hidden_price = th_st.hidden_price
  assign show_compare = th_st.show_compare
  assign product_label_style = th_st.product_label_style
  assign design = st.design
  assign sale_type = th_st.product_label_sale_type
  if pageQuerystring contains 'design='
    assign design_pr = pageQuerystring | split: 'design=' | last | split: '&' | first
    if design_pr == 'grid-1' or design_pr == 'grid-2' or design_pr == 'slide-full' or design_pr == 'thumbnails-bottom' or design_pr == 'thumbnails-left' or design_pr == 'thumbnails-right' or design_pr == 'no-thumbnails'
      assign design = design_pr
    endif
  endif
  assign drawer_none = ''
  if pageQuerystring contains 'view='
    assign sidebar_position = pageQuerystring | split: 'view=' | last | split: '&' | first
    if sidebar_position == 'drawer-sidebar'
      assign drawer_none = 'd-none'
    endif
  endif
  assign zoom_option = st.zoom_type
  if pageQuerystring contains 'zoom='
    assign zoom_option_pr = pageQuerystring | split: 'zoom=' | last | split: '&' | first
    if zoom_option_pr == 'inner-1' or zoom_option_pr == 'inner-2' or zoom_option_pr == 'external'
      assign zoom_option = zoom_option_pr
    endif
  endif
  assign bought_together = st.bought_together
  if pageQuerystring contains 'bought_together='
    assign bought_together_pr = pageQuerystring | split: 'bought_together=' | last | split: '&' | first
    if bought_together_pr == 'enable'
      assign bought_together = true
    endif
  endif
  assign sticky = st.sticky
  if pageQuerystring contains 'sticky='
    assign sticky_pr = pageQuerystring | split: 'sticky=' | last | split: '&' | first
    if sticky_pr == 'enable'
      assign sticky = true
    endif
  endif
  assign current_variant = product.selected_or_first_available_variant
  assign product_qty = 0
  assign prod = product.variants
  assign color = false
  assign size = false
  assign products_group = product.metafields.bls.product_grouped
  for variant in prod
    assign product_qty = product_qty | plus: variant.inventory_quantity
  endfor
  assign product_qty_first = current_variant.inventory_quantity
  case design
    when 'grid-1'
      assign col_images = 'col-lg-7 col-12'
      assign col_infors = 'col-lg-5 col-12'
    when 'grid-2'
      assign col_images = 'col-lg-7 col-12'
      assign col_infors = 'col-lg-5 col-12'
    when 'slide-full'
      assign col_images = 'col-12'
      assign col_infors = 'col-12 text-center flex flex-column align-items-center'
    else
      assign col_images = 'col-lg-7 col-12'
      assign col_infors = 'col-lg-5 col-12'
  endcase
  for option in product.options_with_values
    for itemSize in option_name_size
      if option.name == itemSize
        assign size = true
      endif
    endfor
    for itemColor in option_name
      if option.name == itemColor
        assign color = true
      endif
    endfor
  endfor
  assign hidden_button_add_to_cart = th_st.hidden_button_add_to_cart
  if product.selected_or_first_available_variant.featured_media
    assign seo_media = product.selected_or_first_available_variant.featured_media
  else
    assign seo_media = product.featured_media
  endif

  assign product_aspect_ratio = ''
  if th_st.product_aspect_ratio == 'custom'
    assign product_aspect_ratio = th_st.product_aspect_ratio_custom | replace: ':', '/'
  else
    assign product_aspect_ratio = th_st.product_aspect_ratio
  endif

  assign variants_available_arr = product.variants | map: 'available'
  assign variants_option1_arr = product.variants | map: 'option1'
  assign variants_option2_arr = product.variants | map: 'option2'
  assign variants_option3_arr = product.variants | map: 'option3'

  assign product_media = product.media
  assign media_alt = product_media | map: 'alt'
  if media_alt contains 'image-360'
    assign image_360 = true
  else
    assign image_360 = false
  endif
-%}
